# SONiC Agent Dockerfile
FROM python:3.9-slim-bullseye

LABEL maintainer="SONiC Agent Team"
LABEL version="1.0.0"
LABEL description="SONiC Agent for 400G ZR IPoWDM Control"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    netcat \
    iputils-ping \
    telnet \
    vim \
    less \
    gcc \
    python3-dev \
    libffi-dev \
    libssl-dev \
    i2c-tools \
    && rm -rf /var/lib/apt/lists/*

# Create application user
RUN useradd -m -s /bin/bash sonic-agent && \
    mkdir -p /app /data /logs && \
    chown -R sonic-agent:sonic-agent /app /data /logs

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY config/ ./config/
COPY core/ ./core/
COPY models/ ./models/
COPY scripts/ ./scripts/

# Set permissions
RUN chown -R sonic-agent:sonic-agent /app && \
    chmod +x /app/scripts/*.py

# Switch to non-root user
USER sonic-agent

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python3 /app/scripts/health_check.py

# Entry point
ENTRYPOINT ["python3", "-m", "core.sonic_agent"]
