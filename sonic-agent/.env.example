# SONiC Agent Configuration

# ========================
# REQUIRED - Set by Slice Manager during deployment
# ========================

# Agent Identity
POP_ID=pop1
ROUTER_ID=router1
VIRTUAL_OPERATOR=vOp2
AGENT_ID=${POP_ID}-${ROUTER_ID}

# Kafka Configuration  
KAFKA_BROKER=10.30.7.52:9092
CONFIG_TOPIC=config_${VIRTUAL_OPERATOR}
MONITORING_TOPIC=monitoring_${VIRTUAL_OPERATOR}
HEALTH_TOPIC=health_${VIRTUAL_OPERATOR}

# ========================
# DYNAMIC - Should be auto-discovered or provided
# ========================

# Hardware Configuration
# Example values (uncomment if needed):
# ASSIGNED_TRANSCEIVERS=Ethernet192,Ethernet196
# IFNAME_TO_PORTNUM_JSON={"Ethernet192":192,"Ethernet196":196}

ASSIGNED_TRANSCEIVERS=
IFNAME_TO_PORTNUM_JSON=

# ========================
# OPTIONAL - Tuning parameters
# ========================

# Telemetry Settings
TELEMETRY_INTERVAL_SEC=3.0
COMMAND_TIMEOUT_SEC=30
MAX_TELEMETRY_SESSIONS=10

# QoT Monitoring
ENABLE_QOT_MONITORING=true
QOT_SAMPLES=3
QOT_COOLDOWN_SEC=20
OSNR_THRESHOLD_DB=18.0
BER_THRESHOLD=0.001

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/sonic-agent/agent.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Debug
DEBUG_MODE=false
MOCK_HARDWARE=false

